# 环境变量配置文件
# 复制此文件为 .env 并根据需要修改配置

# 应用配置
APP_ENV=development
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=true

# 数据库配置
DATABASE_URL=postgresql+asyncpg://musicpilot:musicpilot@localhost:5432/musicpilot
DATABASE_ECHO=false

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# 日志配置
LOG_LEVEL=INFO
LOG_DIR=logs

# API 配置
API_V1_PREFIX=/api/v1
API_DOCS_ENABLED=true

# 缓存配置
CACHE_DIR=cache
CACHE_TTL=3600

# 媒体目录配置
MEDIA_DIR=/media/music
TEMP_DIR=/tmp/musicpilot

# MusicBrainz 配置
MUSICBRAINZ_ENABLED=true
MUSICBRAINZ_APP_NAME=MusicPilot
MUSICBRAINZ_APP_VERSION=0.1.0

# 订阅配置
SUBSCRIBE_ENABLED=true
SUBSCRIBE_CHECK_INTERVAL=86400

# 媒体服务器配置
PLEX_ENABLED=false
JELLYFIN_ENABLED=false